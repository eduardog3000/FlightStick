root = true

[*]
indent_style = tab
indent_size = tab
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

ij_formatter_enabled = true
ij_smart_tabs = true
ij_continuation_indent_size = 4

ij_any_block_brace_style = end_of_line
ij_any_class_brace_style = end_of_line
ij_any_method_brace_style = end_of_line
ij_any_else_on_new_line = false
ij_any_catch_on_new_line = false
ij_any_finally_on_new_line = false
ij_any_keep_indents_on_empty_lines = true

# Microsoft .NET properties
csharp_indent_braces = false
csharp_new_line_before_catch = false
csharp_new_line_before_else = false
csharp_new_line_before_finally = false
csharp_new_line_before_open_brace = none
csharp_space_after_keywords_in_control_flow_statements = false

# ReSharper properties
resharper_wrap_before_eq = true
